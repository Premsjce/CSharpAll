<Window x:Class="INotifyPropertyChangedDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INotifyPropertyChangedDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <CheckBox Content="CheckBoxState" 
                      IsChecked="{Binding Path=CheckBoxState}" Margin="15"/>
            <CheckBox Content="CheckBoxEnabled" 
                      IsEnabled="{Binding Path=CheckBoxEnabled}" Margin="15"/>
        </StackPanel>
    </Grid>
</Window>
