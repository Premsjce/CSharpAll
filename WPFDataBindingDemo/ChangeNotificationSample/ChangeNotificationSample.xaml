<Window x:Class="WPFDataBindingDemo.ChangeNotificationSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDataBindingDemo"
        mc:Ignorable="d"
        Title="ChangeNotificationSample" Height="300" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10 0 0 0" >
            <Button Name="btnAddUser" Click="btnAddUser_Click" Margin="5"> Add User</Button>
            <Button Name="btnChangeUser" Click="btnChangeUser_Click" Margin="5">Change User</Button>
            <Button Name="btnDeleteUser" Click="btnDeleteUser_Click" Margin="5">Delete User</Button>
        </StackPanel>
        <ListBox Name="lstboxUsers" DockPanel.Dock="Left" DisplayMemberPath="Name"/>
    </DockPanel>

</Window>
